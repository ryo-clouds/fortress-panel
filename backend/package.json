{
  "name": "@fortress-panel/backend",
  "version": "1.0.0",
  "description": "Fortress Panel Backend API with Zero Trust Security",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "security:audit": "npm audit && snyk test",
    "security:check": "npm run security:audit && npm run test",
    "db:reset": "knex migrate:rollback:all && npm run migrate && npm run seed",
    "logs": "tail -f logs/combined.log",
    "debug": "node --inspect-brk dist/index.js"
  },
  "keywords": [
    "control-panel",
    "api",
    "security",
    "zero-trust",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "Fortress Panel Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@fortress-panel/shared": "file:../shared",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcrypt": "^5.1.1",
    "argon2": "^0.31.0",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.8",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "knex": "^3.0.1",
    "mysql2": "^3.6.5",
    "redis": "^4.6.11",
    "bull": "^4.12.2",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "axios": "^1.6.3",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.0",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/nodemailer": "^6.4.14",
    "@types/mysql": "^2.15.25",
    "@types/uuid": "^9.0.7",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "snyk": "^1.1291.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}