{
  "name": "fortress-panel",
  "version": "1.0.0",
  "description": "High-Security Control Panel with Zero Trust Architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "security:audit": "npm audit && cd backend && npm audit && cd ../frontend && npm audit",
    "security:check": "npm run security:audit && npm run test",
    "docker:build": "docker-compose -f infrastructure/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker-compose.yml down",
    "setup:dev": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../shared && npm install",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "backup": "cd infrastructure && ./scripts/backup.sh",
    "monitoring:setup": "cd monitoring && docker-compose up -d"
  },
  "keywords": [
    "control-panel",
    "security",
    "zero-trust",
    "multi-language",
    "web-hosting",
    "devops",
    "monitoring"
  ],
  "author": "Fortress Panel Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fortress-panel.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/fortress-panel/issues"
  },
  "homepage": "https://fortress-panel.com"
}